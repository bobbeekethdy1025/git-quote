{{!-- {{#if loggedIn}} --}}
<div class="grid-x grid-padding-x">
  <div class="cell large-2">
    <div class=" card">
      <div class="card-divider">Profile</div>
      <div class="card-section">
        <ul>
          <li>
            <a>Account</a>
          </li>
          <li>
            <a>Favorites</a>
          </li>
          <p id="favoriteRecipes"></p>
      </div>
    </div>
  </div>

  <div class="cell large-10">
    <h2 class="card" data-recipe-id={{randomRecipe.id}} data-recipe-image={{randomRecipe.image}}
      data-recipe-title={{randomRecipe.title}} data-recipe-instructions={{randomRecipe.instructions}}
      id="current-recipe-card">
      {{randomRecipe.title}}
      <span>
         <button id="add-favorite-btn" class="submit success button cell large-3">Save to Favorites</button>
   
      </span>
    </h2>
    <div class="grid-x grid-padding-x">
      <img class="cell large-3" src={{randomRecipe.image}}>
      <div class="cell large-9 card-section">
        <h4>Instructions</h4>
        <p>{{randomRecipe.instructions}}</p>
      </div>
    </div>
    
    <div class="callout">
      <h5>Notes on Recipe</h5>
      <ul id="note-body"></ul>
      <input type="text" id="note-input"></input>
      <button id="notes-btn" class="submit success button">Save Notes</button>
    </div>
  </div>
</div>

{{!-- Modal --}}
<div class="reveal" id="exampleModal1" data-reveal>
  <h3>{{randomRecipe.title}}</h3>
  <p class="lead"><img src={{randomRecipe.image}} alt="delicious recipe">
  </p>
  <p>{{randomRecipe.instructions}}</p>
  <button class="close-button" data-close aria-label="Close modal" type="button">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{!-- Modal --}}

<script src="/js/addFavorite.js"></script>
{{!-- {{/if}} --}}
